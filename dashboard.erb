<head>
	<title><%= @title%> Food Dashboard</title>

	<style>
		* {
			background: black;
			color: white
		}
		.flagged {
			color: red;
		}
		.not-flagged {
		}
	</style>
</head>
<body>

	<!-- Make links to each meal. -->
	<% @menu.each do |meal_period, stations| %>
		<a href="#<%=meal_period.gsub(/\s/,"")%>"><%= meal_period %></a>
	<% end %>

	<!-- Present each meal's menu. -->
	<% @menu.each do |meal_period, stations| %>
		<h1 id="<%=meal_period.gsub(/\s/,"")%>"><%= meal_period %></h1>

		<% stations.each do |station, dishes| %>
			<h2><%=station%></h2>
			<% dishes.each do |dish| %>
				<p class="<%= dish.flagged ? "flagged" : "not-flagged"%>"><%= dish.to_s %></p>
			<% end %>
			<% if dishes.empty? %>
				<p>Nothing to show here.</p>
			<% end %>
		<% end %>
	<% end %>
</body>
